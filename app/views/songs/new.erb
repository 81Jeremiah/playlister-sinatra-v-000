<h1>Create a new Song </h1>
<form action="/songs" method="POST">
  <label for="song_name">Name</label>

  <br></br>

  <input type="text" name="song_name" id="Name">

  <br></br>

  <label for="artist.id">Choose an existing artist:</label>

  <br></br>

  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" id="<%=artist.id%>" value="<%=artist.id%>"><%=artist.name%></input>
  <%end%>

  <br></br>

    <label>and/or, create a new artist:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" id="artist_name" name="artist[name]"></input>
    <br></br>
  <input type="submit" value="Create a Song">
</form>
