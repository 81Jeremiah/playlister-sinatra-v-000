<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Show an Individual Song </h1>
<h3>Song: <%= @song.name %><h3>
<h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a><h3>
<h3>Genres: <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a><h3>
    <%end%>
